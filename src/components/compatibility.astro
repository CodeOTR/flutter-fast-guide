const modules: Array<CompatibilityItem> = [
  {
    title: "Feedback",
    icon: "ic:baseline-feedback",
    url: "flutter-fast-guide/docs/start/build",
  },
  {
    title: "RSS Feed",
    icon: "mdi:rss",
    url: "/docs/features/overview",
  },
  {
    title: "Subscriptions",
    icon: "ph:money",
    url: "/docs/features/overview",
  },
  {
    title: "AI Chat",
    icon: "mdi:robot",
    url: "/docs/features/overview",
  },
  {
    title: "Settings",
    icon: "mdi:cog",
    url: "/docs/features/overview",
  },
  {
    title: "Profile",
    icon: "mdi:user",
    url: "/docs/features/overview",
  },
];

const platforms: Array<CompatibilityItem> = [
  {
    title: "Firebase",
    icon: "mdi:firebase",
    url: "https://firebase.google.com/",
  },
  {
    title: "Sentry",
